<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="fill_parent"
    android:layout_height="40dp"
    android:weightSum="1"
    android:gravity="center|right"
    android:padding="0dp"
    android:layout_margin="0dp"
    android:baselineAligned="false"
    android:dividerPadding="3dp"
    android:nestedScrollingEnabled="true">

    <Spinner
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:id="@+id/sp_devices"
        android:prompt="@string/BT_DEVICES"
        android:spinnerMode="dropdown"
        android:labelFor="@string/BT_DEVICES"
        android:contentDescription="@string/BT_DEVICES"
        android:background="@android:color/background_light"
        android:minHeight="200dp"
        android:padding="5dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_sw"
        android:src="@drawable/bt_icon_off_128"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:padding="2dp"
        android:contentDescription="@string/menuBT_switch"/>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="fill_parent"
        android:id="@+id/overflow"
        android:src="@drawable/abc_ic_menu_moreoverflow_mtrl_alpha"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:layout_gravity="center"
        android:contentDescription="@string/menuOverflow"
        android:padding="0dp"
        android:textAlignment="center"
        android:outlineProvider="bounds"
        android:adjustViewBounds="true" />

</LinearLayout>